<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RoomBooking">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp"
        android:padding="10dp"
        android:background="@drawable/trans_white_rectangle"
        android:layout_gravity="center">




        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/logoimage"
            android:src="@drawable/ic_opendoor"
            android:scaleType="fitCenter"
            />

        <TextView
            android:id="@+id/roombooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Room Booking System"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_gravity="center"/>


        <Button
            android:id="@+id/adminloginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:background="@android:color/holo_orange_light"
            android:enabled="true"
            android:text="Admin Login"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/userloginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:background="@android:color/holo_orange_light"
            android:enabled="true"
            android:text="User Login"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/newuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:text="New User here ? Sign Up"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_gravity="center"/>

    </LinearLayout>
    </LinearLayout>